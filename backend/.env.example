# MongoDB 설정
MONGODB_URI=mongodb://localhost:27017/board

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT 설정
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# 서버 설정
PORT=3001
NODE_ENV=development

# Gemini API 설정 (https://makersuite.google.com/app/apikey에서 무료 API 키 발급)
GEMINI_API_KEY=undifine
GEMINI_MODEL=gemini-pro
CHATBOT_MAX_TOKENS=500
CHATBOT_RATE_LIMIT=10
CHATBOT_DAILY_LIMIT=100

# News API 설정 (https://newsapi.org에서 무료 API 키 발급)
NEWS_API_KEY=your-news-api-key-here
